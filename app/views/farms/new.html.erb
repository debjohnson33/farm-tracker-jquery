<%= render 'errors' %>

<h2>Create a New Farm</h2>

<%= form_for @farm do |f| %>
	
		<%= render 'form', f: f %>

	<h3>Create New Areas:</h3>

	<%= f.fields_for :areas do |area| %>

		<%= render 'area_fields', area: area %>

	<% end %>

	<%= f.submit %>
<% end %><br><br>
<%= link_to 'Back to Farms', farms_path(@farm) %>
